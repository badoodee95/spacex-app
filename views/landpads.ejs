<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <title>Landpads</title>
</head>
<body>
    <div class="tabs is-centered">
        <ul>
          <li class="is-active" >
          <li><a href="/">Home</a></li>
          <li><a href="capsules">Capsules</a></li>
          <li><a href="cores">Cores</a></li>
          <li><a href="crew">Crew</a></li>
          <li><a href="dragons">Dragons</a></li>
          <li><a href="history">History</a></li>
          <li><a href="landpads">Landpads</a></li>
          <li><a href="launches">Launches</a></li>
          <li><a href="launchpads">Launchpads</a></li>
          <li><a href="payloads">Payloads</a></li>
          <li><a href="roadster">Roadster</a></li>
          <li><a href="rockets">Rockets</a></li>
          <li><a href="ships">Ships</a></li>
          <li><a href="starlink">Starlink</a></li>
        </ul>
      </div>
      <% for( let i = 0; i < landpads.length; i++ ) { 
            let landpad = landpads[i]; %>
        <article class="message">
            <div class="message-header">
                <p><%= landpad.name %> </p>
            <button class="delete" aria-label="delete"></button>
            </div>
            <div class="message-body">
                <nav class="level">
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Latitude</p>
                        <p class="title"><%= landpad.latitude %></p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Longitude</p>
                        <p class="title"> <%= landpad.longitude %></p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Landing Attempts</p>
                        <p class="title"><%= landpad.landing_attempts %></p>
                    </div>
                </div>
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Landing Successes</p>
                        <p class="title"><%= landpad.landing_successes %></p>
                    </div>
                </div>
                </nav>
            </div>
        </article>
        
      <% } %>
    
</body>
</html>